# OCI Configuration
# Copy this file to terraform.tfvars and fill in your values
#
# NOTE: If using the .env file (recommended), you do NOT need this file.
# The Makefile exports TF_VAR_* variables from .env automatically.
# This file is provided as an alternative for direct `terraform apply` usage.

# OCI Credentials
region           = "us-ashburn-1"
tenancy_ocid     = "ocid1.tenancy.oc1..aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
user_ocid        = "ocid1.user.oc1..aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
fingerprint      = "aa:bb:cc:dd:ee:ff:00:11:22:33:44:55:66:77:88:99"
private_key_path = "/home/your-user/.oci/oci_api_key.pem"

# Compartment OCID (use tenancy OCID for root compartment)
compartment_ocid = "ocid1.compartment.oc1..aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"

# SSH public key for instance access
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC... your-email@example.com"

# Domain name for your Stoat instance
domain_name = "stoat.example.com"

# Instance configuration (OCI Free Tier ARM)
# VM.Standard.A1.Flex - up to 4 OCPUs and 24GB RAM total across all free instances
instance_shape          = "VM.Standard.A1.Flex"
instance_ocpus          = 2
instance_memory_in_gbs  = 6
boot_volume_size_in_gbs = "50"

# Alternative: VM.Standard.E2.1.Micro (x86) - 1 OCPU, 1GB RAM (always free)
# instance_shape          = "VM.Standard.E2.1.Micro"
# instance_ocpus          = 1
# instance_memory_in_gbs  = 1
# boot_volume_size_in_gbs = "50"
