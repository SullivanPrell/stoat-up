# OCI Deployment Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env file to version control!

# ==============================================================================
# OCI CREDENTIALS
# ==============================================================================
# Get these from OCI Console

# Region (e.g., us-ashburn-1, us-phoenix-1, eu-frankfurt-1)
TF_VAR_region=us-ashburn-1

# Tenancy OCID (Profile -> Tenancy)
TF_VAR_tenancy_ocid=ocid1.tenancy.oc1..aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa

# User OCID (Profile -> User Settings)
TF_VAR_user_ocid=ocid1.user.oc1..aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa

# API Key Fingerprint (Profile -> API Keys)
TF_VAR_fingerprint=aa:bb:cc:dd:ee:ff:00:11:22:33:44:55:66:77:88:99

# Path to OCI API private key
TF_VAR_private_key_path=~/.oci/oci_api_key.pem

# Compartment OCID (use tenancy OCID for root compartment)
TF_VAR_compartment_ocid=ocid1.compartment.oc1..aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa

# OCI CLI config profile (optional, defaults to DEFAULT)
TF_VAR_config_file_profile=DEFAULT

# ==============================================================================
# NETWORK CONFIGURATION
# ==============================================================================

# VCN CIDR block
TF_VAR_vcn_cidr_block=10.0.0.0/16

# Subnet CIDR block
TF_VAR_subnet_cidr_block=10.0.1.0/24

# ==============================================================================
# COMPUTE INSTANCE CONFIGURATION
# ==============================================================================

# Instance shape (Free tier options: VM.Standard.A1.Flex or VM.Standard.E2.1.Micro)
TF_VAR_instance_shape=VM.Standard.A1.Flex

# Number of OCPUs (ARM: up to 4 total, x86 Micro: 1)
TF_VAR_instance_ocpus=2

# Memory in GB (ARM: up to 24GB total, x86 Micro: 1GB)
TF_VAR_instance_memory_in_gbs=12

# Boot volume size in GB (up to 200GB total on free tier)
TF_VAR_boot_volume_size_in_gbs=50

# Instance display name
TF_VAR_instance_name=stoat-server

# ==============================================================================
# SSH CONFIGURATION
# ==============================================================================

# SSH public key for instance access
# Generate with: ssh-keygen -t rsa -b 4096 -f ~/.ssh/stoat_oci_rsa
# Then copy the content of ~/.ssh/stoat_oci_rsa.pub here
TF_VAR_ssh_public_key=ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC... your-email@example.com

# Path to SSH private key for Ansible
ANSIBLE_SSH_PRIVATE_KEY=~/.ssh/stoat_oci_rsa

# ==============================================================================
# STOAT APPLICATION CONFIGURATION
# ==============================================================================

# Domain name for Stoat instance
TF_VAR_domain_name=stoat.example.com
STOAT_DOMAIN=stoat.example.com

# Installation directory on the server
STOAT_DIR=/opt/stoat

# ==============================================================================
# ANSIBLE CONFIGURATION
# ==============================================================================

# Ansible user (default: ubuntu for Ubuntu instances)
ANSIBLE_USER=ubuntu

# Ansible remote directory
ANSIBLE_REMOTE_TMP=/tmp/.ansible-${USER}

# ==============================================================================
# CLOUDFLARE TUNNEL CONFIGURATION (OPTIONAL)
# ==============================================================================
# Use Cloudflare Tunnel for automatic SSL and DNS without exposing ports
# Leave empty to use Caddy for traditional HTTPS setup

# Enable Cloudflare Tunnel (true/false)
USE_CLOUDFLARE_TUNNEL=false

# Cloudflare API Token (with Zone:DNS:Edit and Account:Cloudflare Tunnel:Edit permissions)
# Get from: https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_API_TOKEN=

# Cloudflare Account ID
# Get from: https://dash.cloudflare.com/ -> Select domain -> Overview (right sidebar)
CLOUDFLARE_ACCOUNT_ID=

# Cloudflare Zone ID (your domain's zone)
# Get from: https://dash.cloudflare.com/ -> Select domain -> Overview (right sidebar)
CLOUDFLARE_ZONE_ID=

# Cloudflare Tunnel Name (will be created if doesn't exist)
CLOUDFLARE_TUNNEL_NAME=stoat-tunnel

# Cloudflare Tunnel Token (leave empty for automatic creation)
# If you have an existing tunnel, paste the token here
CLOUDFLARE_TUNNEL_TOKEN=
